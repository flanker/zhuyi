%section#forms
  .page-header
    %h1 New Accommodation Request

  %form.form-horizontal.well{method: 'POST'}
    %fieldset
      %legend Basic Information
      .control-group
        %label.control-label{for: 'name'} Name
        .controls
          %input#name.input-large.meninges{type: 'text', name: 'name', placeholder: 'Family name, Given name'}
      .control-group
        %label.control-label{for: 'type'} Accommodation Type
        .controls
          %label.radio{for: 'type-apartment'} Apartment
            %input#type-apartment.meninges{name: 'type', type: 'radio', value: 'apartment', checked: 'checked'}
          %label.radio{for: 'type-hotel'} Hotel
            %input#type-hotel.meninges{name: 'type', type: 'radio', value: 'hotel'}
      .control-group
        %label.control-label{for: 'start_date'} Start Date
        .controls
          %input#start_date.input-medium.meninges.date-input{type: 'text', name: 'start_date', placeholder: 'yyyy/mm/dd', 'data-date-format': 'yyyy/mm/dd'}
      .control-group
        .controls
          %label.checkbox
            %input#no_end_date{type: 'checkbox'}
            I'm not sure the end date
      .control-group
        %label.control-label{for: 'end_date'} End Date
        .controls
          %input#end_date.input-medium.meninges.date-input{type: 'text', name: 'end_date', placeholder: 'yyyy/mm/dd', 'data-date-format': 'yyyy/mm/dd'}
    %fieldset
      %legend Other Requirement
      .control-group
        .controls
          %label.checkbox{for: 'need_house_clean'}
            %input#need_house_clean{name: 'need_house_clean', type: 'checkbox'}
            I need house clean service
      .control-group
        %label.control-label{for: 'house_clean'} House clean
        .controls
          %select#house_clean.meninges{name: 'house_clean'}
            %option Everyday
            %option Every two days
            %option Weekly
            %option Biweekly
      .control-group
        .controls
          %label.checkbox{for: 'need_living_goods'}
            %input#need_living_goods{name: 'need_living_goods', type: 'checkbox'}
            I need living goods
      .control-group
        %label.control-label{for: 'living_goods'} Living Goods
        .controls
          %label.checkbox.inline.span2{for: 'network'}
            %input#network.meninges{type: 'checkbox', name: 'network', value: '1'}
            Network
          %label.checkbox.inline.span2{for: 'wifi'}
            %input#wifi.meninges{type: 'checkbox', name: 'wifi', value: '1'}
            Wi-Fi
          %label.checkbox.inline.span2{for: 'cable_television'}
            %input#cable_television.meninges{type: 'checkbox', name: 'cable_television', value: '1'}
            Cable Television
          %label.checkbox.inline.span2{for: 'air_condition'}
            %input#air_condition.meninges{type: 'checkbox', name: 'air_condition', value: '1'}
            Air Condition
          %label.checkbox.inline.span2{for: 'landing_phone'}
            %input#landing_phone.meninges{type: 'checkbox', name: 'landing_phone', value: '1'}
            Landing Phone
          %label.checkbox.inline.span2{for: 'washing_machine'}
            %input#washing_machine.meninges{type: 'checkbox', name: 'washing_machine', value: '1'}
            Washing Machine
          %label.checkbox.inline.span2{for: 'dryer'}
            %input#dryer.meninges{type: 'checkbox', name: 'dryer', value: '1'}
            Dryer
      .control-group
        %label.control-label{for: 'notes'} Notes
        .controls
          %textarea#notes.input-xxlarge.meninges{rows: '6', name: 'notes', placeholder: 'Anything else you want to say...'}
    .form-actions
      %button.btn.btn-primary{type: 'submit'} Save
      %button.btn{type: 'reset'} Cancel
