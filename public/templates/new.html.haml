%section#forms
  .page-header
    %h1 New Accommodation Request

  %form.form-horizontal.well{method: 'POST'}
    %fieldset
      %legend Business Type
      .control-group
        %label.control-label{for: 'business_type'} Business Type
        .controls
          %select#business_type.meninges{name: 'business_type'}
            %option Business
            %option Personal
            %option Guest visit
      .control-group
        %label.control-label{for: 'project_code'} Project code
        .controls
          %input#project_code.input-large.meninges{type: 'text', name: 'project_code', placeholder: 'like TW_CODE_1'}
            %p.help-block Use the actual project code if this is related to your project.
    %fieldset
      %legend Basic Information
      .control-group
        %label.control-label{for: 'name'} Name
        .controls
          %input#name.input-large.meninges{type: 'text', name: 'name', placeholder: 'Family name, Given name'}
      .control-group
        %label.control-label{for: "type"} Accommodation Type
        .controls
          %label.radio
            %input.meninges{name: 'type', type: 'radio', value: 'apartment', checked: 'checked'}
            Apartment
          %label.radio
            %input.meninges{name: 'type', type: 'radio', value: 'hotel'}
            Hotel
      .control-group
        %label.control-label{for: 'start_date'} Start Date
        .controls
          %input#start_date.input-medium.meninges{type: 'text', name: 'start_date', placeholder: 'yyyy/mm/dd'}
      .control-group
        .controls
          %label.checkbox
            %input#no_end_date{type: 'checkbox'}
            I'm not sure the end date
      .control-group
        %label.control-label{for: 'end_date'} End Date
        .controls
          %input#end_date.input-medium.meninges{type: 'text', name: 'end_date', placeholder: 'yyyy/mm/dd'}
    %fieldset
      %legend Other Requirement
      .control-group
        .controls
          %label.checkbox
            %input#need_house_clean{type: 'checkbox'}
            I need house clean service
      .control-group
        %label.control-label{for: 'house_clean'} House clean
        .controls
          %select#house_clean.meninges{name: 'house_clean'}
            %option Everyday
            %option Every two days
            %option Weekly
            %option Biweekly
      .control-group
        .controls
          %label.checkbox
            %input#need_living_goods{type: 'checkbox'}
            I need living goods
      .control-group
        %label.control-label{for: 'living_goods'} Living Goods
        .controls
          %label.checkbox.inline.span2
            %input#network.meninges{type: 'checkbox', name: 'network', value: '1'}
            Network
          %label.checkbox.inline.span2
            %input#wifi.meninges{type: 'checkbox', name: 'wifi', value: '1'}
            Wi-Fi
          %label.checkbox.inline.span2
            %input#cable_television.meninges{type: 'checkbox', name: 'cable_television', value: '1'}
            Cable Television
          %label.checkbox.inline.span2
            %input#air_condition.meninges{type: 'checkbox', name: 'air_condition', value: '1'}
            Air Condition
          %label.checkbox.inline.span2
            %input#landing_phone.meninges{type: 'checkbox', name: 'landing_phone', value: '1'}
            Landing Phone
          %label.checkbox.inline.span2
            %input#washing_machine.meninges{type: 'checkbox', name: 'washing_machine', value: '1'}
            Washing Machine
          %label.checkbox.inline.span2
            %input#dryer.meninges{type: 'checkbox', name: 'dryer', value: '1'}
            Dryer
      .control-group
        %label.control-label{for: 'notes'} Notes
        .controls
          %textarea#notes.input-xxlarge.meninges{rows: '6', name: 'notes', placeholder: 'Anything else you want to say...'}
    .form-actions
      %button.btn.btn-primary{type: 'submit'} Save
      %button.btn{type: 'reset'} Cancel
